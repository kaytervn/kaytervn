<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".activity.ChangeNameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <include
            android:id="@+id/p1"
            layout="@layout/logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"></include>

        <TextView
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p1"
            android:layout_alignStart="@id/p1"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:text="Change name"
            android:textColor="#3F51B5"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p2"
            android:layout_alignStart="@id/p1"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/name_icon"
            android:drawablePadding="10dp"
            android:ems="11"
            android:hint="Name"
            android:inputType="text"
            android:textSize="20dp" />


        <Button
            android:id="@+id/buttonChangeName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/inputName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#000000"
            android:text="Submit"
            android:textSize="20dp"></Button>

        <TextView
            android:id="@+id/textCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonChangeName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Cancel"
            android:textColor="#FF1100"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>


    <include
        layout="@layout/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"></include>

</LinearLayout>