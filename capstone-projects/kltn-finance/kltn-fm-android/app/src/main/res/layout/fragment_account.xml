                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_debit"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/debit_management"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="@dimen/_13ssp"
                            android:layout_toEndOf="@id/img_debit"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_see_detail"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#dcdcdc"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="@{vm.checkPermission(Constants.PERMISSION_ORGANIZATION_LIST)?View.VISIBLE:View.GONE}"
                        android:onClick="@{()->vm.navigateToOrganization()}"
                        android:id="@+id/layout_organization_management"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:layout_gravity="bottom"
                        >
                        <ImageView
                            android:id="@+id/img_organization"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_organization"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/organization_management"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="@dimen/_13ssp"
                            android:layout_toEndOf="@id/img_organization"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_see_detail"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#dcdcdc"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:onClick="@{()->vm.navigateToProject()}"
                        android:id="@+id/layout_project_management"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:layout_gravity="bottom"
                        >
                        <ImageView
                            android:id="@+id/img_project"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_project"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/project_management"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="@dimen/_13ssp"
                            android:layout_toEndOf="@id/img_project"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_see_detail"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#dcdcdc"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_category"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="bottom"
                        android:onClick="@{()->vm.navigateToCategory()}"
                        android:paddingTop="@dimen/_8sdp"
                        android:visibility="@{vm.checkPermission(Constants.PERMISSION_CATEGORY_LIST)?View.VISIBLE:View.GONE}">
                        <ImageView
                            android:id="@+id/img_category"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:src="@drawable/ic_category" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_toEndOf="@id/img_category"
                            android:fontFamily="@font/lato_bold"
                            android:orientation="vertical"
                            android:text="@string/category_management"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:src="@drawable/ic_see_detail" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="#dcdcdc" />
                    </RelativeLayout>



                    <RelativeLayout
                        android:visibility="@{vm.checkPermission(Constants.PERMISSION_DEPARTMENT_LIST)?View.VISIBLE:View.GONE}"
