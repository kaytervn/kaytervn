                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="@dimen/_13ssp"
                            android:layout_toEndOf="@id/img_department"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_see_detail"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#dcdcdc"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="@{vm.checkPermission(Constants.PERMISSION_SERVICE_LIST)?View.VISIBLE:View.GONE}"
                        android:onClick="@{()->vm.navigateToService()}"
                        android:id="@+id/layout_service"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:layout_gravity="bottom">
                        <ImageView
                            android:id="@+id/img_service"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_service"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/service_management"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="@dimen/_13ssp"
                            android:layout_toEndOf="@id/img_service"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_see_detail"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_12sdp"
