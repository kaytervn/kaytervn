                        android:layout_height="@dimen/_50sdp"
                        android:paddingTop="@dimen/_8sdp"

                        android:layout_gravity="bottom"
                        >
                        <ImageView
                            android:id="@+id/img_group_transaction"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_transaction_group"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transaction_group_management"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="@dimen/_13ssp"
                            android:layout_toEndOf="@id/img_group_transaction"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            />
                        <ImageView

                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_see_detail"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#dcdcdc"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
