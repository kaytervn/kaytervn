<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.finance.ui.fragment.account.AccountFragmentViewModel" />
        <variable
            name="a"
            type="com.finance.ui.fragment.account.AccountFragment" />
        <import type="com.finance.constant.Constants"/>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_theme"
        >
        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_account"
                android:fontFamily="@font/lato_black"
                android:paddingVertical="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:onClick="@{()->a.navigateToChatActivity()}"
                >
                <ImageView
                    android:id="@+id/img_chat"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_message"

                    />
            </RelativeLayout>

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_account_icon"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_ava"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/img_account_icon"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/tv_account_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={vm.profile.fullName, default=Fullname}"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lato_black"
                        android:textSize="@dimen/_14ssp"

                        />
                    <TextView
                        android:id="@+id/tv_account_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lato_regular"
                        android:text="@={vm.profile.email, default=Email}"
                        android:textSize="@dimen/_10ssp"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/img_qr_code"
                    android:onClick="@{()->a.scanQrCode()}"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_qr_code"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20sdp"

                    >
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_qr_code"
                        android:layout_centerInParent="true"
                        app:tint="@color/qr_code_color"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_arrow_right_layout_profile"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_update"
                    android:layout_toStartOf="@+id/img_qr_code"
                    android:layout_centerVertical="true"
                    android:onClick="@{() -> a.goToUpdateProfile()}"
                    android:layout_marginEnd="@dimen/_15sdp"
                    />
            </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingTop="@dimen/_10sdp"
            android:background="@drawable/bg_account_profile_2"
